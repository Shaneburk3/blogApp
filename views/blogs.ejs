<!DOCTYPE html>
<html lang="en">
    <%- include ("partials/head.ejs") %>
<body>
    <%- include ("partials/nav.ejs") %>
    <h1 id="Hello">All blogs</h1>

    <form action="/blogs/create" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="title" name="title" class="form-control" id="title" aria-describedby="title" placeholder="Enter title" required>
        </div>
        <div class="form-group">
            <label for="body">Body</label>
            <textarea type="textarea" name="body" class="form-control" id="body" placeholder="Body" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <br>
    </form>

    <% blogs.forEach(blog => { %>
    <div class="card>
        <div class="card-body">
            <h5 class="card-title"><%=blog.title%></h5>
            <p class="card-text"><%= blog.body %></p>
            <a href="/blogs/<%= blog.id%>" class="card-link">blog link</a>
        </div>
        <!-- Update blog  -->
        <form class="card" style="width: 18rem;" action="/blogs/update" method="POST">
            <div class="form-group">
                <input class="list-group-item" type="hidden" name="id" value="<% blog.id %>" class="form-control" aria-describedby="blog_id">
                <input class="list-group-item" type="text" name="title" value="<% blog.title %>" required>
                <textarea name="body" required><% blog.body %></textarea>
            </div>
            <button type="submit">Update</button>
        </form>

        <!-- delete blog  -->
        <form class="card" style="width: 18rem;" action="/blogs/delete" method="POST">
            <div class="form-group">
                <input class="list-group-item" type="hidden" name="id" value="<% blog.id %>" class="form-control" aria-describedby="blog_id">
            </div>
            <button class="list-group-item" type="submit">Delete</button>
        </form>
        <% }); %>
    </div>


    <%- include ("partials/footer.ejs") %>   
</body>
</html>