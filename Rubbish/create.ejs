<!DOCTYPE html>
<html lang="en">
    <%- include ("partials/head.ejs") %>
<body>
    <%- include ("partials/nav.ejs") %>
    <h1 id="Hello">Create blog World</h1>

    <form class="card" style="width: 40rem;" action="/blogs/create" method="POST">
        <div class="form-group">
            <label class="card-title" for="title">Title</label>
            <input type="title" name="title" class="form-control" id="title" aria-describedby="title" placeholder="Enter title" required>
        </div>
        <div class="form-group">
            <label class="card-title" for="body">Body</label>
            <textarea type="textarea" name="body" class="form-control" id="body" placeholder="Body" required></textarea>
        </div>
        <button type="submit" style="width: 50%" class="btn btn-primary">Create</button>
        <br>
    </form>

    <%- include ("partials/footer.ejs") %>   
</body>
</html>